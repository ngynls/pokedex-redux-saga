{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "jest"
    ],
    "rules": {
        "semi": [
            "warn",
            "always"
        ],
        "brace-style": [
            "warn"
        ],
        "object-curly-spacing": "warn",
        "quotes": [
            "warn",
            "double"
        ],
        "comma-dangle": "warn",
        "comma-spacing": "warn",
        "no-var": "warn",
        "space-infix-ops": "warn",
        "arrow-spacing": "warn",
        "keyword-spacing": "warn"
    }
}